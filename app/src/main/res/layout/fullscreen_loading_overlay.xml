<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:padding="50dp">

    <ProgressBar
        android:id="@+id/fullscreen_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullscreen_progressbar"
        android:layout_marginTop="10dp"
        android:text="@string/loading_overlay_title"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/fullscreen_progressbar"
        app:layout_constraintStart_toStartOf="@+id/fullscreen_progressbar"
        app:layout_constraintTop_toBottomOf="@+id/fullscreen_progressbar" />

</androidx.constraintlayout.widget.ConstraintLayout>